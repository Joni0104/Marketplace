<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Create users table -->
    <changeSet id="001-create-users-table" author="avito-team">
        <createTable tableName="users">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="VARCHAR(500)"/>
            <column name="role" type="VARCHAR(10)" defaultValue="USER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create ads table -->
    <changeSet id="001-create-ads-table" author="avito-team">
        <createTable tableName="ads">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_ad_author"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>

        <createIndex tableName="ads" indexName="idx_ad_author">
            <column name="author_id"/>
        </createIndex>
    </changeSet>

    <!-- Create comments table -->
    <changeSet id="001-create-comments-table" author="avito-team">
        <createTable tableName="comments">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_comment_author"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="ad_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_comment_ad"
                             referencedTableName="ads" referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>

        <createIndex tableName="comments" indexName="idx_comment_ad">
            <column name="ad_id"/>
        </createIndex>

        <createIndex tableName="comments" indexName="idx_comment_author">
            <column name="author_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>